{
    "name": "code-coverage-assistant",
    "version": "0.2.0",
    "description": "Comments a pull request with the lcov code coverage",
    "license": "MIT",
    "repository": "https://github.com/ScaCap/code-coverage-assistant",
    "keywords": [
        "actions",
        "monorepo",
        "pull-request",
        "comment",
        "message"
    ],
    "main": "index.js",
    "scripts": {
        "build": "rollup -c --bundleConfigAsCjs",
        "test": "jest --passWithNoTests --coverage",
        "local": "babel-node src/cli",
        "format": "prettier --write src/*.js src/**/*.js *.js",
        "eslint": "eslint --ext .js ."
    },
    "dependencies": {
        "@actions/core": "^1.2.0",
        "@actions/github": "^5.1.1",
        "lcov-parse": "^1.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.8.6",
        "@babel/node": "^7.8.4",
        "@babel/preset-env": "^7.8.6",
        "@rollup/plugin-commonjs": "^23.0.2",
        "@rollup/plugin-json": "^5.0.1",
        "@rollup/plugin-node-resolve": "^15.0.1",
        "babel-eslint": "^10.1.0",
        "babel-jest": "^29.2.2",
        "core-js": "3",
        "eslint": "^7.15.0",
        "eslint-config-airbnb": "18.2.1",
        "eslint-config-prettier": "^7.0.0",
        "eslint-plugin-filenames": "1.3.2",
        "eslint-plugin-import": "2.22.1",
        "eslint-plugin-prettier": "3.2.0",
        "husky": ">=4",
        "jest": "^29.2.2",
        "lint-staged": "^10.5.3",
        "prettier": "^2.7.1",
        "regenerator-runtime": "^0.13.3",
        "rollup": "^3.2.5",
        "rollup-plugin-node-externals": "^5.0.2"
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "useBuiltIns": "usage",
                    "corejs": 3
                }
            ]
        ]
    },
    "jest": {
        "testMatch": [
            "<rootDir>/src/*.test.js",
            "<rootDir>/src/**/*.test.js"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "useTabs": false,
        "bracketSpacing": true,
        "trailingComma": "all"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint --cache --fix",
            "prettier --write"
        ]
    }
}
