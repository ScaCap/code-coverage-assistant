{
    "name": "code-coverage-assistant",
    "version": "0.2.0",
    "description": "Comments a pull request with the lcov code coverage",
    "license": "MIT",
    "repository": "https://github.com/ScaCap/code-coverage-assistant",
    "keywords": [
        "actions",
        "monorepo",
        "pull-request",
        "comment",
        "message"
    ],
    "main": "dist/main.js",
    "scripts": {
        "build": "parcel build src/index.js --no-source-maps",
        "test": "jest --passWithNoTests --coverage",
        "local": "babel-node src/cli",
        "format": "prettier --write src/*.js src/**/*.js *.js",
        "eslint": "eslint --ext .js .",
        "pre-commit": "lint-staged"
    },
    "dependencies": {
        "@actions/core": "^1.2.0",
        "@actions/github": "^5.1.1",
        "@rollup/plugin-terser": "^0.3.0",
        "@types/node": "^18.11.18",
        "lcov-parse": "^1.0.0",
        "parcel": "^2.8.2",
        "rollup-plugin-node-builtins": "^2.1.2",
        "@swc/helpers": "^0.4.14"
    },
    "engines": {
        "node": "16"
    },
    "browserslist": "> 0.25%, not dead",
    "devDependencies": {
        "@babel/core": "^7.20.2",
        "@babel/eslint-parser": "7.19.1",
        "@babel/node": "^7.20.2",
        "@babel/preset-env": "^7.20.2",
        "@rollup/plugin-commonjs": "^24.0.0",
        "@rollup/plugin-json": "^6.0.0",
        "@rollup/plugin-node-resolve": "^15.0.1",
        "babel-jest": "^29.2.2",
        "core-js": "3.27.1",
        "eslint": "^8.27.0",
        "eslint-config-airbnb": "19.0.4",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-filenames": "1.3.2",
        "eslint-plugin-import": "2.27.5",
        "eslint-plugin-prettier": "4.2.1",
        "husky": ">=8.0.1",
        "jest": "^29.2.2",
        "lint-staged": "^13.0.3",
        "prettier": "^2.7.1",
        "regenerator-runtime": "^0.13.10",
        "rollup": "^3.2.5",
        "rollup-plugin-node-externals": "^5.0.2",
        "rollup-plugin-terser": "^7.0.2"
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "useBuiltIns": "usage",
                    "corejs": 3
                }
            ]
        ]
    },
    "jest": {
        "testMatch": [
            "<rootDir>/src/*.test.js",
            "<rootDir>/src/**/*.test.js"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "useTabs": false,
        "bracketSpacing": true,
        "trailingComma": "all"
    },
    "lint-staged": {
        "*.js": [
            "eslint --cache --fix",
            "prettier --write --ignore-unknown"
        ]
    }
}
